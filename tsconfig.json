{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["esnext"],
    "types": [
      // fix declaration collision between react-native and ts-jest
      "react",
      "react-native",
      "react-redux",
      "redux",
      "jest"
    ]
  },
  "include": ["src", "App.tsx", "src/__tests__/TreeItem.test.tsx"]
}
